            android:layout_alignParentEnd="true"
            android:inputType="number" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
